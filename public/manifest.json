{
  "name": "Hard Bulls Baseball Scoreboard",
  "manifest_version": 3,
  "host_permissions": ["https://www.hardbulls.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.baseballsoftball.at/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
